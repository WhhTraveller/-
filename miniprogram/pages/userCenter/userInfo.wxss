/* pages/userCenter/userInfo.wxss */
.userInfo{
  width: 100%;
  height: 360rpx;
  position: relative;
}
.userInfo .bgImage{
  width: 100%;
  height: 360rpx;
  vertical-align: bottom;
  filter: blur(2px);
}
.userInfo .info{
  width: 100%;
  height: 360rpx;
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
}
.userInfo .info > view{
  margin-top: 20rpx;
}
.userInfo .info .avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
}
.userInfo .info .other{
  width: 100%;
  padding:0rpx 50rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.userInfo .info .other view{
  display: inline-block;
  text-align: center;
}
.itemList{
  width: 100%;
  padding: 30rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.itemList .item{
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #e2e2e2;
  position: relative;
}
.itemList .item:last-child{
  border-bottom: none;
}
.itemList .item > image{
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}
.itemList .item::after{
  content: " ";
  display: inline-block;
  width: 30rpx;
  height: 30rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transform: rotate(45deg);
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
}